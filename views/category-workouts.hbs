<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            <a href="/dashboard" class="list-group-item list-group-item-action">Dashboard</a>
            <a href="/workouts" class="list-group-item list-group-item-action active">Workouts</a>
            <a href="/diary" class="list-group-item list-group-item-action">Workout Diary</a>
        </div>
    </div>
    
    <div class="col-md-9">
        <h2>{{category}} Workouts</h2>
        <div class="row">
            {{#each workouts}}
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body h-100">
                        <h5 class="card-title display-1">{{name}}</h5>
                        <p class="card-text">{{description}}</p>
                        <ul>
                            {{#each exercises}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
